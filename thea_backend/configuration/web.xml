<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
<display-name>thea backend</display-name>
  <servlet>
  	<servlet-name>thea backend REST-test</servlet-name>
    <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
    <init-param>
      <param-name>jersey.config.server.provider.packages</param-name>
      <param-value>com.thea.backend.sandbox</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>thea backend REST-test</servlet-name>
    <url-pattern>/sandbox/*</url-pattern>
  </servlet-mapping> 
  
  <servlet>
  	<servlet-name>version 1</servlet-name>
  	<servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
    <init-param>
      <param-name>jersey.config.server.provider.packages</param-name>
      <param-value>com.thea.backend.production.services</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>version 1</servlet-name>
    <url-pattern>/v1/*</url-pattern>
  </servlet-mapping> 
</web-app>